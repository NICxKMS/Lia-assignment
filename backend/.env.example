ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# LIA CHATBOT BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# ----------------
# DATABASE (Neon PostgreSQL)
# ----------------
# Get your connection string from https://console.neon.tech
# Use the pooled connection string for production
DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# Connection pool settings (optional, has sensible defaults)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ----------------
# CACHE (Upstash Redis)
# ----------------
# Get credentials from https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# ----------------
# AUTHENTICATION
# ----------------
# IMPORTANT: Generate a secure secret for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=7

# ----------------
# LLM PROVIDERS
# ----------------
# Google Gemini API Key (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key

# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key

# Default LLM settings
DEFAULT_LLM_PROVIDER=gemini
DEFAULT_LLM_MODEL=gemini-2.5-flash

# ----------------
# GOOGLE CLOUD (Optional - for NLP API sentiment)
# ----------------
# Service account JSON path or leave empty to use default credentials
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_CLOUD_PROJECT_ID=

# ----------------
# CORS
# ----------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend.vercel.app


# ----------------
# RATE LIMITING
# ----------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CHAT_REQUESTS_PER_MINUTE=20

# ----------------
# APPLICATION
# ----------------
APP_NAME=Lia Chatbot
APP_VERSION=2.5.1
DEBUG=false
LOG_LEVEL=INFO

# ----------------
# OBSERVABILITY (Optional)
# ----------------
# OpenTelemetry Collector endpoint
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=lia-backend
